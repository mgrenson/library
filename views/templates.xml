<odoo>
    <data>

        <template id="book_list">
          <ul>
            <li t-foreach="books" t-as="book">
              <a t-attf-href="#{ root }/books/#{ book.id }">
                <t t-esc="book.display_name"/>
              </a>
            </li>
          </ul>
        </template>

        <template id="book_detail">
          <h1><t t-esc="book.display_name"/></h1>
          <dl>
            <t t-foreach="book._fields" t-as="field">
              <dt><t t-esc="field"/></dt>
              <dd><t t-esc="book[field]"/></dd>
            </t>
          </dl>
        </template>

    </data>
</odoo>