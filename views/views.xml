<odoo>
    <data>

        <record id="book_search" model="ir.ui.view">
            <field name="name">Book filters</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"
                           filter_domain="['|', '|', ('name', 'ilike', self), ('isbn', 'ilike', self), ('description', 'ilike', self)]"/>
                    <field name="publisher_id"/>
                    <filter name="filter_inactive" string="Inactive" domain="[('active', '=', False)]"/>
                    <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="book_kanban" model="ir.ui.view">
            <field name="name">Book Kanban</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('library.book', 'image_128', record.id.raw_value)"
                                         alt="Book" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <small t-if="record.isbn.value">[<field name="isbn"/>]
                                        </small>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="book_list" model="ir.ui.view">
            <field name="name">Book List</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Title"/>
                    <field name="isbn"/>
                    <field name="publisher_id"/>
                </tree>
            </field>
        </record>

        <record id="book_form" model="ir.ui.view">
            <field name="name">Book form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_check_isbn" type="object" string="Check ISBN"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="group_left">
                                <field name="name" string="Title"/>
                                <field name="author_ids" widget="many2many_tags"/>
                                <field name="publisher_id"/>
                                <field name="date_published"/>
                            </group>
                            <group name="group_right">
                                <field name="image_1920"
                                       widget="image"
                                       class="oe_avatar"
                                       options="{'preview_image': 'image_128'}"/>
                                <field name="isbn"/>
                                <field name="active"/>
                            </group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record id="book_action" model="ir.actions.act_window" >
            <field name="name">Library books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="library.action_server">
          <field name="name">library server</field>
          <field name="model_id" ref="model_library_library"/>
          <field name="state">code</field>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": model._name,
            }
          </field>
        </record>
        -->

        <!-- Top menu item -->
        <menuitem name="library"
                  id="library.menu_root"/>

        <!-- menu categories -->
        <menuitem name="Master data"
                  id="library.menu_master_data"
                  parent="library.menu_root"/>

        <!-- actions -->
        <menuitem name="Books"
                  id="library.menu_book"
                  parent="library.menu_master_data"
                  action="library.book_action"/>

    </data>
</odoo>